<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @movement_annotation.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @movement_annotation.description %>
</p>
<p>
  <strong>Format:</strong>
  <%= @movement_annotation.format %>
</p>
<% if ! @movement_annotation.tags.empty? -%>
  <p>
    <strong>Tags:</strong>
    <% @movement_annotation.tags.each do |tag| %>
    	<%= link_to tag.name, tagged_url(:tag => tag.name) %>
	<% end %>
  </p>
<% else -%>
 <p>No tags yet</p>
<% end -%>
<p>
  <strong>Public? </strong>
  <%= @movement_annotation.public %>
</p>
<%= link_to 'Edit', edit_movement_annotation_path(@movement_annotation) %> |
<%= link_to 'Back', movement_annotations_path %>
