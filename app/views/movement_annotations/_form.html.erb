    <%= f.label :description %><br>
    <%= f.text_area :description, size: "60x12" %>
  </div>
  <div class="field">
    <%= f.label :format %><br>
    <%= f.text_field :format %>
  </div>
  <div class="field">
	<%= f.label :data_track%>
	<%= f.collection_select :data_track_id, @data_tracks, :id, :name %>
  </div>
  <div class="field">
	<%= f.label :tags %>
	<%= f.text_field :tag_list %>	
  </div>
  <div class="field">
    <%= f.label :public %><br>
    <%= f.check_box :public %> 
<em>Public pieces are published for everyone to see</em>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
