<h1>Accessible Tracks</h1>

<table class="table table-striped table-bordered" id="mytracks">
  <thead>
    <tr>
      <th>Name</th>
	  	<th>Sensor Types</th>
      <th>Movement Take</th>
			<th>Project</th>
	  	<th>Technician</th>
			<th>Recording Date</th>
	  	<th>Tags</th>
    </tr>
  </thead>

  <tbody>
    <% @data_tracks.each do |track| %>
      <tr>
        <td><%= link_to truncate(track.name, length: 40), data_track_path(track) %> <%= render partial: "owner_options", locals: { track: track} if authorized?(track)%></td>
				<td><%= raw(track.sensor_types.map{|type| link_to(type.name, sensor_type_path(type)) }.join(", "))%>
				<td><%= link_to truncate(track.movement_group.name, length: 25), movement_group_path(track.movement_group) %><span style="float:right">//MoVa//</span></td>
				<td><%= link_to truncate(track.movement_group.project.name, length: 25), project_path(track.movement_group.project) %></td>
				<td><%= truncate(track.technician, length: 20) %></td>
				<td><%= track.recorded_on %></td>
				<td><%= track.tag_list %></td>
      </tr>
    <% end %>
  </tbody>
</table>
