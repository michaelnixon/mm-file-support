<% provide(:title, "Track #{@data_track.name}") %>
<ol class="breadcrumb">
  <li><a href="/">Projects</a></li>
	<li><%= link_to @data_track.movement_group.project.name, project_path(@data_track.movement_group.project) %></li>
	<li><%= link_to @data_track.movement_group.name, movement_group_path(@data_track.movement_group) %></li>
  <li class="active"><%= link_to @data_track.name, data_track_path(@data_track) %></li>
</ol>
<h2><%= @data_track.name %> <% if authorized?(@data_track) %><small><%= link_to edit_link_html('Edit'), edit_data_track_path(@data_track) %></small><% end %></h2>
<p>
  <%= @data_track.description %>
</p>
<h5>License terms</h5>
<p>
	<%= @data_track.movement_group.project.license %>
	<% if @data_track.movement_group.project.license.blank? %>
	No terms specified. Assume regular copyright in effect.
	<% end %>
</p>
<p><strong>Asset</strong>: <%= link_to @data_track.asset.file_file_name, @data_track.asset.file.url(:original, false) %> - <%= @data_track.asset.file_content_type %><br/>
		<%= link_to 'Mova!', mova_url + "group_id=#{@data_track.movement_group.id}"%>
</p>
<p>
  <strong>Technician:</strong>
  <%= @data_track.technician %>
</p>
<% unless @data_track.movers.empty? %>
<h5>Movers</h5>
<ul class="horizontal-wrapped">
	<% @data_track.movers.each do |mover| %>
		<li><p>
		<a href="<%= mover_url(mover) %>"><%= image_tag(mover.avatar.url(:thumb)) if mover.avatar? %><%= mover.name%></a>
		</p></li>
	<% end %>
</ul>
<% else %>
No movers assigned.
<% end %>
<h5>Sensors used:</h5>	
	<ul>
	<% @data_track.sensor_types.each do |sensor| %>
		<li><%= link_to sensor.name, sensor_type_url(sensor)%></li>
	<% end %>
	</ul>
<% if ! @data_track.tags.empty? -%>
  <p>
    <strong>Tags:</strong>
    <% @data_track.tags.each do |tag| %>
    	<%= link_to tag.name, tagged_url(:tag => tag.name) %>
	<% end %>
  </p>
<% else -%>
 <p>No tags set.</p>
<% end -%>
<% if authorized? @data_track %>
	<p><span class="glyphicon glyphicon-exclamation-sign"></span> <em>Notice to owner: <% if @data_track.public? %>
		 This track is visible to everyone.
		 <% else %>
		 This track can only be seen by its creator and approved access groups.
		 <% end %></em>
	</p>
<% end %>
<% unless @data_track.asset.nil? %>
<% end %>
<h5>Annotations</h5>
<% unless @data_track.movement_annotations.empty? %>
	<ul>
	<% @data_track.movement_annotations.each do |annotation| %>
		<li><%= link_to annotation.name, movement_annotation_path(annotation)%></li>
	<% end %>
	</ul>
<% else %>
<p>No annotations attached!</p>
<% end %>
<% if current_user %>
<%= link_to link_html("glyphicon glyphicon-paperclip", "Attach a file"), new_movement_annotation_path(id: @data_track.id, annotated: DataTrack) %>
<% end %>

<br/>
<%= link_to back_link_html('Return to take details'), movement_group_path(@data_track.movement_group) %>
