<%= form_for(@data_track, :html => { :multipart => true }) do |f| %>
  <% if @data_track.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@data_track.errors.count, "error") %> prohibited this movement_datum from being saved:</h2>

      <ul>
      <% @data_track.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, size: 60 %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, size: "60x12" %>
  </div>
  <div class="field">
    <%= f.label :technician %><br>
    <%= f.text_field :technician, size: 60 %>
  </div>
  <div class="field">
	<%= f.label :movement_group %>
	<%= f.collection_select :movement_group_id, @movement_groups, :id, :name %>
  </div>
  <div class="field">
	<%= f.label :sensor_type %>
	<%= f.collection_select :sensor_type_id, @sensor_types, :id, :name %>
  </div>
  <div class="field">
	<%= f.label :tags %>
	<%= f.text_field :tag_list %>	
  </div>
  <div class="field">
    <%= f.label :public %><br>
    <%= f.check_box :public %> 
<em>Public pieces are published for everyone to see</em>
  </div>
  <div class="field">
	<%= f.label :asset_file %><br>
	<% unless @data_track.asset.nil? %>
		Currently: <%= @data_track.asset.file_file_name %><br/>
	<% end %>
	<%= f.file_field :asset_file %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
