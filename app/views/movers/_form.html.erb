<%= form_for @mover, :html => { :multipart => true } do |f| %>
  <% if @mover.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mover.errors.count, "error") %> prohibited this mover from being saved:</h2>

      <ul>
      <% @mover.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name, class: "control-label" %><br>
    <%= f.text_field :name, size: 60, class: "form-control", required: "required" %>
  </div>
  <div class="field form-group">
    <%= f.label :date_of_birth, class: "control-label" %><br>
    <%= f.date_select :dob, start_year: 1900, end_year: Date.today.year, order: [:month, :day, :year], class: "form-control" %>
  </div>
  <div class="row">
  <div class="field form-group col-xs-3">
    <%= f.label :gender, class: "control-label" %><br>
    <%= f.text_field :gender, class: "form-control", size: 40 %>
  </div>
	</div>
  <div class="field form-group">
    <%= f.label :expertise, class: "control-label" %><br>
    <%= f.text_field :expertise, class: "form-control" %>
		<span class="help-block">(Optional: Add a free-form description of this mover's expertise)</span>
  </div>
  <div class="field form-group">
		<%= f.label :cma_like_training, class: "control-label" do %>
			<%= f.check_box :cma_like_training %> CMA or CMA-like training?
		<% end %>
  </div>
  <div class="field form-group">
    <%= f.label :other_relevant_training, class: "control-label" %><br>
    <%= f.text_field :other_training, class: "form-control" %>
		<span class="help-block">(Optional: Add a free-form description of this mover's additional training)</span>
  </div>
  <div class="field form-group">
		<%= f.label :mover_image %><br/>
		<%= f.file_field :avatar %>
		<%= image_tag(@mover.avatar.url(:thumb)) if @mover.avatar?%>
	</div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
