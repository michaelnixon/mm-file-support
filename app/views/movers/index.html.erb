<h1>Listing movers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Expertise</th>
      <th>Cma-like-training</th>
      <th>Other training</th>
      <th>Data track</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @movers.each do |mover| %>
      <tr>
        <td><%= mover.name %></td>
        <td><%= mover.dob %></td>
        <td><%= mover.gender %></td>
        <td><%= mover.expertise %></td>
        <td><%= mover.cma_like_training %></td>
        <td><%= mover.other_training %></td>
        <td><%= link_to 'Show', mover %></td>
        <td><%= link_to 'Edit', edit_mover_path(mover) %></td>
        <td><%= link_to 'Destroy', mover, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

