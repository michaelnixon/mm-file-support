<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.text_field :email, class: "form-control", placeholder: "Email address", required: "required", autofocus: "autofocus" %>
  </div>
  <div class="field form-group">
    <%= f.label :alias %><br />
    <%= f.text_field :alias, class: "form-control", placeholder: "Name to be displayed" %> <em class="help-block">If you'd prefer something more memorable than your email address, please specify that here.</em>
  </div>
  <div class="field form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "form-control", placeholder: "Password", required: "required" %>
		<span class="help-block">The password must: contain a digit from 0-9, one lowercase character, one uppercase character, one special symbol in the list '@#$%', and have a length of at least 6 characters and a maximum of 20 characters.</span>
  </div>
  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Repeat the password", required: "required" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>


