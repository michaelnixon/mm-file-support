<div class="row wrapper white-bg page-heading">
  <div class="col-lg-10">
    <h2>Your Access Group</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'projects' %>">Home</a>
      </li>
      <li class="active">
        <strong>Your Access Group</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <p class="p-gray"><b>Edit your access group</b></p>
          <div class="pull-right"><span class="padded-span"><%= link_to add_link_html('New Access group'), new_access_group_path %></span>
          </div>
        </div>
        <div class="col-lg-12 border-bottom-mg-bt-top">
        </div>
        <div class="ibox-content">
          <table class="table">
            <thead>
            <tr>
              <th>Group name</th>
              <th>Users</th>
              <th>Permitted Projects</th>
            </tr>
            </thead>

            <tbody>
            <% @access_groups.each do |access_group| %>
                <tr>
                  <td>	<%= link_to edit_link_html, edit_access_group_path(access_group) %>
                    <%= link_to remove_link_html, access_group, method: :delete, data: { confirm: 'Are you sure?' } %>
                    <%= link_to access_group.name, access_group_url(access_group) %>
                  </td>
                  <td><%= access_group.users.map { |user| user.display_name }.to_sentence %></td>
                  <td><%= access_group.projects.map { |user| user.name }.to_sentence %></td>
                </tr>
            <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>